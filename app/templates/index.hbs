<!--Define the form and populate with handlebars input tags (required for passing the values to the javascript method "submitFormData()")-->
<form>
  Peak Power:<br>
  {{input type="text" value=peakPower}}<br>

  <!--Loop through all possible options for orientation, which are stored inside an array in the controller, and display them.-->
  Orientation:<br>
  <select onchange = {{action (mut orientation) value="target.value"}}>
    {{#each orientationOptions as |orientation|}}
      <option>{{orientation}}</option>
    {{/each}}
  </select>
  <br>

  <!--Loop through all possible options for elevation, which are stored inside an array in the controller, and display them.-->
  Elevation:<br>
  <select onchange = {{action (mut elevation) value="target.value"}}>
    {{#each elevationOptions as |elevation|}}
      <option>{{elevation}}</option>
    {{/each}}
  </select>
  <br>

  <!--Loop through all possible options for overshading, which are stored inside an array in the controller, and display them.-->
  Overshading:<br>
  <select onchange = {{action (mut overshading) value="target.value"}}>
    {{#each overshadingOptions as |overshading|}}
      <option>{{overshading}}</option>
    {{/each}}
  </select>
  <br>

  <!--On click, calls the "submitFormData()" method with the input values as parameters-->
  <input type="submit" value="Add Photovoltaic" {{action "submitFormData"}}>
</form>

<table style="width: 40%; background: #BBBBBB">
  <tr class="table-headers">
    <th colspan='5'>Photovoltaic Calculator</th>
  </tr>

  <tr class="table-headers">
    <th>Peak Power</th>
    <th>Orientation</th>
    <th>Elevation</th>
    <th>Overshading</th>
    <th>Actions</th>
  </tr>

  <!--Creates an instance of the "pv-entry" component for each pv with an index corresponding to its position in the store collection, for use later when deleting a pv.
  Subscribe the component deletePV implementation to the index implementation-->
  {{#each model as |pv index|}}
    {{pv-entry pvID=index pv=pv deletePV='deletePV'}}
  {{/each}}

  <!--Make the final rounding inside of handlebars-->
  <tr>
    <th colspan="3">Energy Generated by PVs:</th>
    <th>{{round-number totalEnergyGenerated 3}}</th>
    <th></th>
  </tr>
</table>
